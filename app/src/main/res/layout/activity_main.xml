<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/edit_text1"
        app:layout_constraintEnd_toEndOf="@id/edit_text1"
        app:layout_constraintTop_toBottomOf="@id/edit_text1"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="@id/button"
        app:layout_constraintEnd_toEndOf="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textColor="@color/whitee"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="298dp" />


    <ImageView
        app:layout_constraintTop_toTopOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintEnd_toEndOf="@id/button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:src="@drawable/arr"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="298dp" />

    <EditText
        android:id="@+id/edit_text1"
        android:hint="password"
        android:inputType="textPassword"
        android:background="@color/white"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/edit_text2"
        android:hint="email"
        android:background="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/edit_text3"
        android:hint="Nickname"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/edit_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="40dp" />

    <ImageView
          android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/image"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"/>

    <TextView
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRIVIA"
        android:backgroundTint="@color/whitee"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>